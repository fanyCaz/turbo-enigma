<div class='container m-8 place-items-center'>
	<p> <%= current_user.username %> </p>
	<div class='flex rounded-md bg-red-50'>
		<div class='w-2/5 p-1'>
			<%= image_tag 'fairytale_fairy.jpeg', size: '400x300' %>
		</div>
		<div class='w-3/5'>
			<p class='font-bold text-lg my-4'> Cambiar contrase単a</p>
			<%= form_with model: current_user, url: password_path do |form| %>
				<% if form.object.errors.any? %>
					<div class="alert alert-danger">
						<% form.object.errors.full_messages.each do |message| %>
							<div><%= message %></div>
						<% end %>
					</div>
				<% end %>

				<div class='flex'>
					<div class='w-1/2 my-2'>
						<%= form.label :password, "Contrase単a" %>
					</div>
					<div class='w-1/2 my-2'>
						<%= form.label :password_confirmation, "Confirma tu contrase単a" %>
					</div>
				</div>
				<div class='flex'>
					<div class='w-1/2'>
						<%= form.password_field :password, class:'rounded-md border border-solid border-red-200' %>
					</div>
					<div class='w-1/2'>
						<%= form.password_field :password_confirmation, class:'rounded-md border border-solid border-red-200' %>
					</div>
				</div>
    <%= form.submit "Cambia la contrase単a", class:'self-end mb-0 text-white rounded-md bg-pink-300 p-2 mt-4 w-full' %> 
			<% end %>
		</div>
	</div>
</div>
